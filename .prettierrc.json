{
	"semi": true,
	"trailingComma": "es5",
	"singleQuote": true,
	"printWidth": 80,
	"tabWidth": 5,
	"useTabs": true,
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"jsxSingleQuote": true,
	"bracketSameLine": false,
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"printWidth": 120
			}
		},
		{
			"files": "*.ts",
			"options": {
				"parser": "typescript"
			}
		}
	]
}
